{
  "compileOnSave": true,
	"compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
		"target": "es6",
		"lib": ["es5", "es6", "dom"],
		"jsx": "react",
		"allowJs": true,
    "paths": {
      "@app/*": ["./src/app/*"],
    },
  },
  "include": [
    "./src/**/*"
  ]
}
