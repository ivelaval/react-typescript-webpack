{
	"compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"noImplicitAny": true,
		"target": "es5",
		"lib": ["es5", "es6", "dom"],
		"jsx": "react",
		"allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/app/components/*"],
      "@assets/*": ["./src/app/assets/*"],
      "@core/*": ["./src/app/core/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
