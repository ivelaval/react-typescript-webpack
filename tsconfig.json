{
  "compileOnSave": true,
	"compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
		"target": "es6",
		"lib": ["es5", "es6", "dom"],
		"jsx": "react",
		"allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["react"],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/app/components/*"],
      "@assets/*": ["./src/app/assets/*"],
      "@core/*": ["./src/app/core/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
